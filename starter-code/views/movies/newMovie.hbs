
{{!--this route corresponds to the post routes in movieRoutes.js --}}
{{!--the goal is to connect form's body to the route and process to MOngo DB  --}}

<br>
<form action="/movies/addMovie" method="post"> 
    <label for="title-input">Title</label>
    <input type="text" name="newTitle" id="title-input">

    <label for="genre-input">Genre</label>
    <input type="text" name="newGenre" id="genre-input">

    <label for="plot-input">Plot</label>
    <input type="text" name="newPlot" id="plot-input">

    <label>Cast:</label>
    <select name="newCast">
    {{!-- <option value="null"></option> --}}
    {{#each cast}}
    <option value="{{this._id}}">{{this.name}} </option>
    {{/each}}  
    </select>
    <br>

    <button type="submit">Add title</button>

</form>
